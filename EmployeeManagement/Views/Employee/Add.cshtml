@model Person

@{
    ViewData["TitlePhrase"] = "Add Employee";
}

<h3>Add New Employee</h3>
<hr />

<form asp-controller = "Employee" asp-action = "Add" method="POST">
  <div class="form-group">
    <label asp-for = "FirstName">First Name</label>
    <span class = "text-danger" asp-validation-for = "FirstName"></span>
    <input type="text" class = "form-control" placeholder="Enter First Name">
  </div>

  <div class="form-group">
    <label asp-for = "Surname">Last Name</label>
        <span class = "text-danger" asp-validation-for = "Surname"></span>
    <input type="text" class = "form-control"  placeholder="Enter Last Name">
  </div>

  <div class="form-group">
    <label asp-for = "Address">Address</label>
    <input type="text" class = "form-control"  placeholder="Enter Address">
  </div>

  <div class="form-group">
    <label asp-for = "Gender">Gender</label>
    <input type="text" class = "form-control"  placeholder="Enter your Gender">
  </div>

  <div class="form-group">
    <label asp-for = "Salary">Salary</label>
    <input type="number" class = "form-control" placeholder="Enter Your Salary">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
