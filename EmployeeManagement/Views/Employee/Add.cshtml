@model Person

@{
    ViewData["TitlePhrase"] = "Add Employee";
    Dictionary<String, Char> Gender = new Dictionary<String, Char>()
    {
        {"Male", 'M'},
        {"Female", 'F'},
        {"Others", 'O'}
    };
}

<h3>Add New Employee</h3>
<hr />

<form asp-controller = "Employee" asp-action = "Add" method="POST">
  <div class="form-group">
    <label asp-for = "FirstName">First Name</label>
    <span class = "text-danger" asp-validation-for = "FirstName"></span>
    <input type="text" class = "form-control" asp-for = "FirstName" placeholder="Enter First Name">
  </div>

  <div class="form-group">
    <label asp-for = "Surname">Last Name</label>
        <span class = "text-danger" asp-validation-for = "Surname"></span>
    <input type="text" class = "form-control" asp-for = "Surname" placeholder="Enter Last Name">
  </div>

  <div class="form-group">
    <label asp-for = "Address">Address</label>
    <input type="text" class = "form-control" asp-for = "Address" placeholder="Enter Address">
  </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <span asp-validation-for="Gender" class="text-danger"></span>
        @foreach (var gender in Gender)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender" value="@gender.Value">
                <label class="form-check-label" for="inlineRadio1">@gender.Key</label>
            </div>
        }
    </div>

  <div class="form-group">
    <label asp-for = "Salary">Salary</label>
    <input type="number" class = "form-control" asp-for = "Salary" placeholder="Enter Your Salary">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
